{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 8, "x": 0,  "y": 0 },
      "id": 1,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true
        },
        "tooltip": { "mode": "single", "sort": "none" }
      },
      "targets": [
        {
          "expr": "sum by (service) (rate({job=\"docker\"}[$__rate_interval]))",
          "legendFormat": "{{service}}",
          "queryType": "range",
          "refId": "A"
        }
      ],
      "title": "Log lines rate (by service)",
      "type": "timeseries"
    },

    {
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "fieldConfig": {
        "defaults": { "unit": "ops" },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 8, "x": 8,  "y": 0 },
      "id": 2,
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      },
      "targets": [
        {
          "expr": "sum by (service) (rate({job=\"docker\", service=~\"$service\"} |~ \"(?i)error|fail|exception\" [$__rate_interval]))",
          "legendFormat": "{{service}}",
          "queryType": "range",
          "refId": "A"
        }
      ],
      "title": "Error-like lines rate (by service)",
      "type": "timeseries"
    },

    {
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "id": 3,
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      },
      "targets": [
        {
          "expr": "topk(10, sum by (container) (rate({job=\"docker\", service=~\"$service\"} |~ \"(?i)error|fail|exception\" [$__rate_interval])))",
          "legendFormat": "{{container}}",
          "queryType": "range",
          "refId": "A"
        }
      ],
      "title": "Top containers by error rate",
      "type": "timeseries"
    },

    {
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 6 },
      "id": 4,
      "options": {
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=\"docker\", service=~\"$service\", stream=~\"$stream\", container=~\"$container\"}",
          "queryType": "instant",
          "refId": "A"
        }
      ],
      "title": "Live logs (filtered)",
      "type": "logs"
    },

    {
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 6 },
      "id": 5,
      "options": {
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=\"docker\", service=~\"$service\"} |~ \"(?i)error|fail|exception\"",
          "queryType": "instant",
          "refId": "A"
        }
      ],
      "title": "Recent errors (selected service)",
      "type": "logs"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["loki", "logs", "docker"],
  "templating": {
    "list": [
      {
        "name": "DS_LOKI",
        "label": "Loki datasource",
        "type": "datasource",
        "query": "loki",
        "hide": 0
      },
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
        "query": "label_values({job=\"docker\"}, service)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "name": "container",
        "label": "Container",
        "type": "query",
        "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
        "query": "label_values({job=\"docker\", service=~\"$service\"}, container)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "name": "stream",
        "label": "Stream",
        "type": "query",
        "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
        "query": "label_values({job=\"docker\", service=~\"$service\"}, stream)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s","10s","15s","30s","1m","5m","15m","30m","1h"],
    "time_options": ["5m","15m","1h","6h","12h","24h","2d","7d","30d"]
  },
